<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/ingredient_grid"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <!-- 케첩 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <!-- 재료 이미지 -->
                    <ImageView
                        android:id="@+id/it_ketchup"
                        android:layout_width="35dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:src="@drawable/it_ketchup" />

                    <!-- 추가 버튼 -->
                    <ImageButton
                        android:id="@+id/btn_add_1"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_plus"
                        android:contentDescription="추가 버튼"/>
                </FrameLayout>

                <!-- 재료 이름 -->
                <TextView
                    android:id="@+id/tv_carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="케첩"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 마요네즈 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageView
                        android:id="@+id/it_mayonnaise"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:src="@drawable/it_mayonnaise" />

                    <ImageButton
                        android:id="@+id/btn_add_2"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_plus"
                        android:contentDescription="추가 버튼"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_paprika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="마요네즈"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 머스타드 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageView
                        android:id="@+id/it_mustard"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/it_mustard" />

                    <ImageButton
                        android:id="@+id/btn_add_3"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_plus"
                        android:contentDescription="추가 버튼"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_eggplant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="머스타드"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 바베큐 소스 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="62dp"
                    android:layout_height="62dp">

                    <ImageView
                        android:id="@+id/it_bbq"
                        android:layout_width="50dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:src="@drawable/it_bbq" />

                    <ImageButton
                        android:id="@+id/btn_add_4"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_plus"
                        android:contentDescription="추가 버튼"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_onion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="바베큐 소스"
                    android:textSize="12sp"/>
            </LinearLayout>
        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
