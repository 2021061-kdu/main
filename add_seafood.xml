<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 그리드 (재료 목록) -->
            <GridLayout
                android:id="@+id/ingredient_grid"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="4"
                android:columnOrderPreserved="false"
                android:padding="5dp">

                <!-- 재료 추가 고등어 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <FrameLayout
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <!-- 재료 이미지 -->
                        <ImageView
                            android:id="@+id/it_mackerel"
                            android:layout_width="35dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:src="@drawable/it_mackerel" />

                        <!-- 추가 버튼 -->
                        <ImageButton
                            android:id="@+id/btn_add_1"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="추가 버튼"/>
                    </FrameLayout>

                    <!-- 재료 이름 -->
                    <TextView
                        android:id="@+id/tv_paprika"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="문어"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 오징어 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <FrameLayout
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <ImageView
                            android:id="@+id/it_squid"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/it_squid" />

                        <ImageButton
                            android:id="@+id/btn_add_3"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="추가 버튼"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_eggplant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="오징어"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 새우 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <FrameLayout
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <ImageView
                            android:id="@+id/it_shrimp"
                            android:layout_width="50dp"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:src="@drawable/it_shrimp" />

                        <ImageButton
                            android:id="@+id/btn_add_4"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="추가 버튼"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_onion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="새우"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- 게 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <FrameLayout
                        android:layout_width="62dp"
                        android:layout_height="62dp">

                        <ImageView
                            android:id="@+id/it_crab"
                            android:layout_width="49dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:src="@drawable/it_crab" />

                        <ImageButton
                            android:id="@+id/btn_add_5"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="추가 버튼"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_potato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="게"
                        android:textSize="12sp" />
                </LinearLayout>


            </GridLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
